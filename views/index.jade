    margin-bottom: 1em;
  }

  #modules {
    list-style-type: none;
  }

  #modules b {
    display: inline-block;
    min-width: 60px;
    font-family: monospace;
  }

  #modules button {
    display: none;
    list-style-type: none;
  }
  #modules li {
  min-height: 24px;
  }
